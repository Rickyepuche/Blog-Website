/* blog text css */
.blog-hero-section{
    display: flex;
    gap: 20px;
    background-color: #f4f4f4;
    margin-top: 20px;
    padding: 50px;
    text-align: center;
}

.blog-hero-content{
    flex: 1.5;
    padding: 20px;
    font-family: 'Cinzel Decorative', serif;
    overflow-wrap: break-word; /* ensures long words break */
    word-wrap: break-word;     /* legacy support */
    word-break: break-word;
}
.blog-hero-img-container{
    flex: 1;
    justify-content: center;
    align-items: center;
}
.blog-hero-section img{
    float: right;
    box-sizing: border-box;
    width: 100%;
    height: auto;
    max-width: 600px;
    border-radius: 20px;
}

.blog-hero-content h1{
    font-size: 2.5rem;
    margin-bottom: 20px;
    font-family: 'Cinzel Decorative', serif;
}
.blog-hero-content h2{
    font-size: 1.6rem;
    margin-bottom: 20px;
    font-family: Arial, Helvetica, sans-serif;
}

.blog-content-section{
    margin-top: 40px;
    padding-top: 10px;
    text-align: center;
    font-size: 1.2rem;
    font-family: Arial, Helvetica, sans-serif;
}